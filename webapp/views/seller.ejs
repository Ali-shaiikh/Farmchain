<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Seller Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<div class="max-w-5xl mx-auto py-10 px-4">

  <!-- Language Switcher -->
  <div class="flex justify-end mb-4">
    <form method="GET">
      <select name="lang" onchange="this.form.submit()" class="border p-2 rounded">
        <option value="en" <%= lang === 'en' ? 'selected' : '' %>>English</option>
        <option value="mr" <%= lang === 'mr' ? 'selected' : '' %>>Marathi</option>
      </select>
    </form>
  </div>

  <h1 class="text-3xl font-bold text-emerald-700 mb-8 text-center">
    <%= lang === 'mr' ? 'विक्रेता डॅशबोर्ड' : 'Seller Dashboard' %>
  </h1>

  <h2 class="text-lg mb-6">
    <%= lang === 'mr' ? `आपले स्वागत आहे, ${sellerName}!` : `Welcome, ${sellerName}!` %>
  </h2>

  <!-- Add New Listing Form -->
  <form action="/seller/add" method="POST" enctype="multipart/form-data" class="bg-white p-6 rounded-2xl shadow-lg mb-10">
    <input type="hidden" name="lang" value="<%= lang %>">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">
      <%= lang === 'mr' ? 'नवीन यंत्रसामग्री जोडा' : 'Add New Listing' %>
    </h2>
    <div class="grid sm:grid-cols-2 gap-4">
      <input type="text" name="sellerName" placeholder="<%= lang === 'mr' ? 'विक्रेत्याचे नाव' : 'Seller Name' %>" class="border p-3 rounded-lg focus:ring-2 focus:ring-emerald-400 focus:outline-none" required>
      <input type="text" name="name" placeholder="<%= lang === 'mr' ? 'यंत्राचे नाव' : 'Equipment Name' %>" class="border p-3 rounded-lg focus:ring-2 focus:ring-emerald-400 focus:outline-none" required>
      <select name="category" class="border p-3 rounded-lg focus:ring-2 focus:ring-emerald-400 focus:outline-none" required>
        <% CATEGORIES.forEach(c => { %>
          <option value="<%= c %>"><%= lang === 'mr' ? (CATEGORY_TRANSLATIONS[c] || c) : c %></option>
        <% }) %>
      </select>
      <select name="region" class="border p-3 rounded-lg focus:ring-2 focus:ring-emerald-400 focus:outline-none" required>
        <% REGIONS.forEach(r => { %>
          <option value="<%= r %>"><%= r %></option>
        <% }) %>
      </select>
      <input type="number" name="pricePerDay" placeholder="<%= lang === 'mr' ? 'दर प्रतिदिन (₹)' : 'Price per day (₹)' %>" class="border p-3 rounded-lg focus:ring-2 focus:ring-emerald-400 focus:outline-none" required>
      <input type="file" name="img" accept="image/*" class="border p-3 col-span-2 rounded-lg focus:ring-2 focus:ring-emerald-400 focus:outline-none">
    </div>
    <button type="submit" class="mt-4 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold px-6 py-2 rounded-xl transition duration-300">
      <%= lang === 'mr' ? 'यंत्र जोडा' : 'Add Listing' %>
    </button>
  </form>

  <!-- Seller Listings -->
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">
    <%= lang === 'mr' ? 'आपली यंत्रसामग्री' : 'Your Listings' %>
  </h2>
  <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
    <% if (listings && listings.length) { %>
      <% listings.forEach(l => { 
           const imgUrl = l.img && l.img.trim() !== "" ? l.img : "https://via.placeholder.com/300x150"; 
      %>
        <div class="bg-white p-4 rounded-2xl shadow hover:shadow-xl transition duration-300 flex flex-col">
          <div class="w-full h-40 bg-cover bg-center rounded-xl mb-4" style="background-image: url('<%= imgUrl %>');"></div>
          <div class="flex-1">
            <h3 class="font-bold text-lg text-gray-700"><%= l.name %></h3>
            <p class="text-sm text-gray-500 mb-1">
              <%= lang === 'mr' ? (CATEGORY_TRANSLATIONS[l.category] || l.category) : l.category %> • <%= l.region %>
            </p>
            <p class="text-sm text-gray-600 font-medium">₹<%= l.pricePerDay %>/<%= lang === 'mr' ? 'दिवस' : 'day' %></p>
            <p class="text-sm text-gray-500 mt-1"><%= lang === 'mr' ? 'विक्रेता' : 'Seller' %>: <%= l.sellerName || sellerName %></p>
          </div>
          <span class="mt-2 inline-block px-3 py-1 text-xs font-semibold rounded-full <%= l.status === 'approved' ? 'bg-emerald-100 text-emerald-700' : 'bg-yellow-100 text-yellow-700' %>">
            <%= l.status %>
          </span>
        </div>
      <% }) %>
    <% } else { %>
      <p class="col-span-full text-gray-500 text-center"><%= lang === 'mr' ? 'कोणतीही यंत्रसामग्री उपलब्ध नाही.' : 'No listings available.' %></p>
    <% } %>
  </div>

</div>

</body>
</html>
